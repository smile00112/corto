			  <div id="terms">
				<div class="quickcheckout-content text-right">{{ terms }}</div>
			  </div>
			</div>

		{% endif %}

	  </div>

	  {% if html_footer %}
	  {{ html_footer }}
	  {% endif %}

	{{ content_bottom }}</div>
  {{ column_right }}</div>
