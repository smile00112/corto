<div class="row">
  <div class="col">
    <h2 class="h2__main"><span>{{ heading_title }} </span><i class="sl13"></i></h2>
    <div class="owl-carousel owl-theme slide-three">

        {% for product in products %}

        <div class="item" data-product_item="{{ product.product_id }}">
  
          <div class="block__item-default">
            <p class="conteiner__image"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.model }}" ></p>
            <p class="block__item-default--artikul"><span>Артикул: 	</span> <span>{{ product.model }}</span></p>
            <p class="block__item-default--text"><a href="{{ product.href }}"><span>{{ product.name }}</span></a></p>
            <div class="block__item-default-basket">
              {% if not product.special %}
                <p class="block__item-default-price">{{ product.price }}</p>
              {% else %} 
                <p class="block__item-default-price price-new">{{ product.special }}</p> 
                <p class="block__item-default-price-old">{{ product.price }}</p> 
              {% endif %}
  
              
              <p><button class="hvr-fade cart-btn" onclick="cart.add('{{ product.product_id }}');">Купить </button></p>
            </div>
            <div class="block__item-default-comparison">
              <p class="block__item-default--text">В наличии</p>
              <p class="comparison wishlist-btn" onclick="wishlist.add('{{ product.product_id }}');"><i class="sl12"></i></p>
            </div>
          </div>
  
        </div>
  
        {% endfor %}      



    </div>
  </div>
</div>


