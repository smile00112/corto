{{ header }}

<div class="content-wrapper">
  <div class="center inner">
    <div class="content">
      <div class="left-column">

        {{ column_left }}

        {{ column_right }}


      </div>


      <div class="workarea {{ class }}" id="content">
        <div class="body_text">

          <div class="breadcrumb-share">
            <div id="navigation" class="breadcrumb">

              {% for breadcrumb in breadcrumbs %}

                 <div class="breadcrumb__item"  itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" itemprop="child">
                    <span class="breadcrumb__arrow"></span>
                    {% if breadcrumb.href %} <a class="breadcrumb__link" href="{{ breadcrumb.href }}" title="{{ breadcrumb.text1 }}" itemprop="url">{% endif %}
                      <span class="breadcrumb__title" itemprop="title">
                        {{ breadcrumb.text }}
                      </span>
                      {% if breadcrumb.href %}</a>{% endif %}
                  </div>
              {% endfor %}

            </div>
          </div>

        <h1 id="pagetitle">Отложенные товары</h1>
        {{ content_top }}

   
        {% if(products) %}
        
        <div id="catalog">
          
          <div class="catalog-item-price-view catalog-head">
            
            
          
              <!--
              <div class="catalog-item-info" style="    display: flex;">
        
                <div class="item" style="text-align: right;flex-basis: 70px;">№</div>
                <div class="item" style="text-align:  center;flex-basis: 301px;">Название</div>
                <div class="item" style="text-align:  center;flex-basis: 30px;">Код поставщика</div>
                <div class="item" style="text-align:  center;flex-basis: 30px;">Информация</div>
                <div class="item" style="text-align:  center;flex-basis: 30px;">Кол-во</div>
                <div class="item" style="text-align:  center;flex-basis: 30px;">Цена</div>
              
            </div>
          -->
            <div class="catalog-item items-table-head" data-entity="item" itemscope="" style="    color: #575b71;    border: 1px solid #dee0ee;    background: #dee0ee;">
        
              <div class="catalog-item-info">
                <button type="button" data-product_id="1410" class="quick_view" data-action="view" name="quick_view">
                  <i class="fa fa-eye"></i>
                </button>
                <div class="catalog-item-image-cont">Фото</div>
        
                <span class="unit" style="text-align: center;">№</span>
        
                <div class="catalog-item-title">Название</div>
        
                <span class="unit" style="text-align: center;">Код поставщика</span>
        
                <span class="unit table-prod-info" style="text-align: center;" title="Информация">Инф.</span>
                
                 <div class="item-price" >Цена</div>
        
                <span class="table-prod-quantity">
                  Наличие
                </span>
                  
          
        
                 <div class="buy_more">
                </div>
        
              </div>
        
        
            </div>
        
        
        
        
            <!-- items-container -->
        
            {% for product in products %}
             
        
            <div class="catalog-item"  data-entity="item" itemscope=""  itemtype="http://schema.org/Product">
        
              <div class="catalog-item-info">
                
                <button type="button" data-product_id="{{ product.product_id }}" class="quick_view" data-action="view" name="quick_view">
                  <i class="fa fa-eye"></i>
                </button>
                
                <div class="catalog-item-image-cont">
                  <div class="catalog-item-image">
                    <meta content="{{ product.thumb }}"
                      itemprop="image">
                    <a href="{{ product.href }}">
                      <img class="item_img" id="product_{{ product.product_id }}_image" src="{{ product.thumb }}" width="178" height="178" alt="{{ product.name }}" title="{{ product.name }}">
        
                      <span class="sticker">
                      </span>
                    </a>
                  </div>
                </div>
        
                <span class="unit" style="text-align: center;">{{ product.mpn }}</span>
        
                <div class="catalog-item-title">
                  <a href="{{ product.href }}" title="{{ product.name }}" itemprop="url">
                    <span itemprop="name">{{ product.name }}</span>
                  </a>
                </div>
        
                <span class="unit" style="text-align: center;">{{ product.upc }}</span>
                
                <span class="unit table-prod-info" style="    text-align: center;  font-size: 17px; ">
        
                  {% if product.image != 'image/catalog/noimage.png' %}    
        
                    <a href="{{ product.image }}" class="catalog-item-delay image-link" data-modal_id="product_{{ product.product_id }}_modal_foto" 
                      title="Фотография" rel="nofollow">
                      <i class="fa fa-camera" aria-hidden="true"></i>
                    </a>
        
                  {% endif %}
        
                  {% if product.kol_po_katalogy %}    
                      <a href="javascript:void(0)" class="catalog-item-delay" onclick="show_message_modal_by_id('product_{{ product.product_id }}_modal_count')" 
                        title="Колличество товара в категории" rel="nofollow">
                        <i class="fa fa-archive"></i>
                      </a>
                      <div id="product_{{ product.product_id }}_modal_count" style="display:none">
                       {{ product.kol_po_katalogy }}
                      </div>          
                  {% endif %}     
        
                  {% if product.opisanie %}       
                      <a href="javascript:void(0)" class="catalog-item-delay" onclick="show_message_modal_by_id('product_{{ product.product_id }}_modal_info')" 
                        title="Описание товара" rel="nofollow">
                        <i class="fa fa-info-circle"></i>
                      
                      </a>
        
                      <div id="product_{{ product.product_id }}_modal_info" style="display:none">
                       {{ product.opisanie }}
                      </div>
                  {% endif %}             
        
                </span>
                
        
                <meta content="{{ product.decription }}"
                  itemprop="description">
                <div class="item-price" itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
                  <span class="catalog-item-price">{{ product.price_not_formated }}<span> руб.</span>
                  </span>
                  <meta itemprop="price" content="{{ product.price_not_formated }}">
                  <meta itemprop="priceCurrency" content="RUB">
                  <meta content="InStock" itemprop="availability">
                </div>
        
                <span class="unit">
                  {{ product.quantity }} шт </span>
              {% if product.quantity %}    
                <div class="available">
                  <div class="avl">
                    <i class="fa fa-check-circle"></i>
                    <span>
                      В наличии {% if product.quantity >5 %}много{% else %}мало{% endif %}</span>
                  </div>
                </div>
             {% else %}
              <div class="available">
                <div class="not_avl">
                  <i class="fa fa-times-circle"></i>
                  <span>Нет в наличии</span>
                </div>
              </div>
             {% endif %}
                <div class="buy_more">
                  <div class="add2basket_block">
        
                    <form action="" class="add2basket_form">
                      <div class="qnt_cont">
                        <a href="javascript:void(0)" class="minus" ><span>-</span></a>
                        <input type="text" name="quantity" id="product_{{ product.product_id }}_quantity" {# max="{{ product.quantity }}"  data-limit="{{ product.quantity }}"#} data-limit="111"class="quantity" value="1">
                        <a href="javascript:void(0)" class="plus"
                          ><span>+</span></a>
                      </div>
                      <input type="hidden" name="ID" value="{{ product.product_id }}">
                      <button type="button" 
                        class="btn_buy"
                        id = "product_{{ product.product_id }}_addbtn"
                        name="add2basket"
                        onclick="cart.add('{{ product.product_id }}', '1');">
                        <i class="fa fa-shopping-cart"></i>
                      </button> 
                      <div class="delay add-to-wish-btn">
                        <a href="javascript:void(0)" 
                          class="catalog-item-delay"
                          id = "product_{{ product.product_id }}_addwishlistbtm"
                          onclick="wishlist.remove('{{ product.product_id }}', true);"
                          title="Отложить" rel="nofollow">
                          <i class="fa fa-times"></i>
                          <i class="fa fa-check"></i>
                        </a>
                      </div>
                    </form>
                   
                  </div>
        
        
        
        
                </div>
              </div>
        
        
            </div>
        
        
        
            {% endfor %} 
        
        
            <div class="catalog_pagination" data-pagination-num="1">
            
              <div class="pagination">
                
                {{ pagination }}
              
              </div>
            
            {# <div class="col-sm-6 text-right">{{ results }}</div> #}
            </div>
        
          </div>
        </div>
        
        </div>
            {% endif %}
        

        {{ content_bottom }}

      
   
  </div>
  </div>
  </div>    
</div>  



{{ footer }}


